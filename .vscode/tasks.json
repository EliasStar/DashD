{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Container",
            "type": "shell",
            "command": "docker build -t dashd_builder ${workspaceFolder}",
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "Build App",
            "type": "shell",
            "command": "docker run --rm --volume ${workspaceFolder}:/app dashd_builder",
            "problemMatcher": [
                "$go"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}